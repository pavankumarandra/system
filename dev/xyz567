class UDSApp:
    def __init__(self):
        self.user_name = input("Enter your name: ").strip()  # ✅ Ask for name
        logging.info(f"Tester Name: {self.user_name}")       # ✅ Log the name
        
        self.config = None
        self.oled = None
        self.buttons = None
        self.uds = None
        self.usb = None
        self.initialized_once=False
        self.btn_map = {}
        self.menu_combos = {}
        self.file_transfer_combos = {}
        self.initialize_dependencies()
